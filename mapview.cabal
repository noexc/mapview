name:                mapview
version:             2.0.0
synopsis:            View coordinates received via telemetry on a map in realtime. (Currently only RTTY)
homepage:            https://github.com/W8UPD/mapview
license:             MIT
license-file:        LICENSE
author:              Ricky Elrod
maintainer:          ricky@elrod.me
copyright:           (c) 2014 Ricky Elrod <ricky@elrod.me>
category:            W8UPD
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable mapview-rttyparser
  main-is:             mapview-rttyparser.hs
  build-depends:
      aeson >= 0.7
    , ansi-wl-pprint >= 0.6.7 && < 0.7
    , base > 4 && < 5
    , bytestring >= 0.10
    , configurator >= 0.2.0.3
    , directory >= 1.2
    , lens >= 4
    , mtl > 2.1 && < 2.2
    , old-locale >= 1.0
    , optparse-applicative >= 0.9
    , shelly >= 1.5
    , strict >= 0.3.2
    , text >= 1.1
    , thyme >= 0.3.5
    , transformers >= 0.3 && < 0.4
    , trifecta >= 1.4 && < 2
    , unix >= 2.7

  default-language:    Haskell2010
  ghc-options: -Wall -Werror -threaded -O2

executable mapview-send
  main-is:             mapview-send.hs
  build-depends:
      base > 4 && < 5
    , configurator >= 0.2.0.3
    , directory >= 1.2
    , fsnotify >= 0.1
    , system-filepath >= 0.4
    , text >= 1.1
    , transformers >= 0.3 && < 0.4
    , uuid >= 1.3
    , websockets >= 0.8

  default-language:    Haskell2010
  ghc-options: -Wall -Werror -threaded -O2

executable mapview-announce
  main-is:             mapview-announce.hs
  build-depends:
      aeson >= 0.7
    , base > 4 && < 5
    , bytestring >= 0.10
    , configurator >= 0.2.0.3
    , directory >= 1.2
    , optparse-applicative >= 0.9
    , text >= 1.1

  default-language:    Haskell2010
  ghc-options: -Wall -Werror -threaded -O2

test-suite hlint
  hs-source-dirs: tests
  main-is: hlint.hs
  type: exitcode-stdio-1.0
  ghc-options: -Wall -rtsopts -with-rtsopts=-N -threaded
  default-language: Haskell2010
  build-depends:
      base
    , hlint >= 1.8
